shell /home/bkapps/local/bin/zsh
layout new
autodetach on
termcapinfo xterm-256color 'Co#256:pa#32767:AF=\E[38;5;%p1%dm:AB=\E[48;5;%p1%dm:tc=xterm'
bell_msg "^G"
#defkanji utf-8
#defencoding utf-8
#encoding utf-8 utf-8
#encoding eucJP
#defencoding eucJP
defscrollback 10000
#"escape charactor select best charactor lator
escape ^Jj
startup_message off
vbell off
caption always "%{= wb} %-w%{=bu dr}%n %t%{-}%+w %= %{=b wk} [%l] %{=b wb}%y/%m/%d(%D) %{=b wm}%c"
hardstatus alwayslastline "%{=u Wr}[%Y-%m-%d %02c%{-u Wr}] %{Wk}%-w%{BW}%n %t%{-}%+w"
bind n screen
bind b prev
bind n next
bind j focus down
bind k focus up
bind h focus left
bind l focus right
# disable lockscreen <C-j-x>
bind x
bind ^x
# resize window
bind r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^]  command
bind -c resize j eval 'resize +1' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'

# 横分割
split
focus down
screen -t log1
split -v
focus right
screen -t log2
focus up
screen -t dev
resize +20

